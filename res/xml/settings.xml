<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <ListPreference
        android:defaultValue="dark"
        android:entries="@array/settings_themes_entries"
        android:entryValues="@array/settings_themes_entry_values"
        android:key="theme"
        android:summary="@string/settings_theme_summary"
        android:title="@string/settings_theme_title" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="soundsOn"
        android:summary="@string/settings_sounds_summary"
        android:title="@string/settings_sounds_title" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="vibrationOn"
        android:summary="@string/settings_vibration_summary"
        android:title="@string/settings_vibration_title" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="hardControlOn"
        android:summary="@string/settings_hard_summary"
        android:title="@string/settings_hard_title" />

    <PreferenceCategory android:title="@string/settings_data" >
        <Preference
            android:key="clearData"
            android:summary="@string/settings_clear_summary"
            android:title="@string/settings_clear_title" />
    </PreferenceCategory>
    
    <PreferenceCategory android:title="@string/settings_about" >
        <Preference
            android:enabled="false"
            android:key="version"
            android:summary="@string/unknown"
            android:title="@string/settings_version_title" />
    </PreferenceCategory>

</PreferenceScreen>