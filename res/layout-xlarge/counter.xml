<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <Button
            android:id="@+id/decrementButton"
            style="@style/decrement_button"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_weight="1"
            android:text="@string/minus" />

        <Button
            android:id="@+id/incrementButton"
            style="@style/increment_button"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_weight="1"
            android:text="@string/plus" />
        
    </LinearLayout>

    <me.tsukanov.counter.view.AutoResizableTextView
        android:id="@+id/counterLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:text="@string/value_placeholder"
        android:textAppearance="@style/counter_value" />

</RelativeLayout>